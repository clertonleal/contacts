<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="android.view.View"/>
        <variable
            name="menu"
            type="clertonleal.com.hotmart.model.Menu"/>
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/image_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@{menu.image}"
            tools:src="@drawable/ico_minhas_vendas" />

        <TextView
            android:id="@+id/text_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Meus Produtos"
            app:text="@{menu.name}"
            android:textSize="20sp"
            android:fontFamily="sans-serif"
            android:layout_centerInParent="true"
            android:layout_marginStart="22dp"
            android:layout_marginLeft="22dp"
            android:layout_toRightOf="@+id/image_menu"
            android:layout_toEndOf="@+id/image_menu"/>

        <TextView
            android:id="@+id/menu_counter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/counter_shape"
            android:padding="5dp"
            android:paddingEnd="10dp"
            android:paddingRight="10dp"
            android:paddingStart="10dp"
            android:paddingLeft="10dp"
            android:textSize="20sp"
            android:visibility="@{menu.count == 0 ? View.GONE : View.VISIBLE}"
            android:text="@{String.valueOf(menu.count)}"
            android:fontFamily="sans-serif"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:foregroundGravity="right"
            android:layout_centerInParent="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            tools:text="+50"/>

    </RelativeLayout>
</layout>


