<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="android.view.View"/>
        <variable
            name="message"
            type="clertonleal.com.hotmart.Message"/>
    </data>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/circle_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginStart="16dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profileImage"
                android:layout_width="80dp"
                android:layout_height="80dp"
                tools:src="@drawable/purple_background" />

            <TextView
                android:id="@+id/text_initial"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="V"
                android:text="@{message.contactInitial}"
                android:visibility="@{message.contactImage == null ? View.VISIBLE : View.INVISIBLE}"
                android:textSize="60sp"
                android:textColor="@android:color/white"
                android:layout_centerInParent="true"/>
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="80dp"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="@{message.contactName}"
            android:fontFamily="sans-serif"
            android:maxLines="2"
            android:layout_below="@+id/circle_container"
            tools:text="Valeria Ciqueira"/>

    </RelativeLayout>
</layout>
